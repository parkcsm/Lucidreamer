<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_margin="10dp"
        android:textColor="#5f746b"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="본 어플(Lucidreamer)은 자각몽을 꾸려는 사람들의 정보 공유를 위해 만들어졌습니다. " />


    <TextView
        android:layout_margin="10dp"
        android:textColor="#5f746b"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="따라서 본 어플을 이용하기 위해서 아래 링크를 통해 해당 용어들을 익히고 오시는 것을 추천 드립니다."/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lucid4"
        />


    <Button
        android:id="@+id/what_is_lucid_dream"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:text="루시드 드림이란?"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/lucid_dream_wording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:text="루시드 드림 용어 정리" />

</LinearLayout>