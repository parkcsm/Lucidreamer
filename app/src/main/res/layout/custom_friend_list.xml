<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:background="@drawable/bolder_style4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/friend_list_photo"
            android:layout_width="121dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/lucid"
            app:civ_border_color="#000000"
            app:civ_border_width="0.8dp" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cacccc"/>

        <TextView
            android:id="@+id/friend_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:maxLength="10"
            android:text="parkcsm123"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="17dp"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cacccc"/>

        <TextView
            android:layout_width="7dp"
            android:layout_height="match_parent" />


        <TextView
            android:layout_marginRight="10dp"
            android:maxLength="20"
            android:text="ㅁㅁㅁㅁㅁAAAAAAAAAAAAAAAAAAAAㅁㅁㅁㅁㅁㅁㅁ"
            android:textColor="#000000"
            android:id="@+id/friend_list_text"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>